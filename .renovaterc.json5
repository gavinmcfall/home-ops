{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>gavinmcfall/home-ops//.renovate/autoMerge.json5",
    "github>gavinmcfall/home-ops//.renovate/changelogs.json5",
    "github>gavinmcfall/home-ops//.renovate/customManagers.json5",
    "github>gavinmcfall/home-ops//.renovate/grafanaDashboards.json5",
    "github>gavinmcfall/home-ops//.renovate/groups.json5",
    "github>gavinmcfall/home-ops//.renovate/labels.json5",
    "github>gavinmcfall/home-ops//.renovate/overrides.json5",
    "github>gavinmcfall/home-ops//.renovate/semanticCommits.json5",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(America/New_York)",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification",
  ],
  ignorePaths: [
    "**/*.sops.*",
    "**/resources/**",
    ".codex/**",
  ],
  flux: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  "helm-values": {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  // Applying this label to a Renovate PR triggers an immediate rebase on the next run
  rebaseLabel: "renovate/force-rebase",
  packageRules: [
    {
      description: ["Skip major updates for stateful databases"],
      matchPackagePatterns: [
        "bitnamicharts/mariadb",
        "bitnamicharts/postgresql",
        "valkey/valkey",
        "rabbitmq",
        "postgres-init",
      ],
      matchDatasources: ["helm", "docker"],
      matchUpdateTypes: ["major"],
      enabled: false,
    },
  ],
}
